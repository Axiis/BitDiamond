
@{
    Layout = null;
}

<form class="form-horizontal form-material" >
    <a href="~/Index.html" class="text-center db">
        <img src="~/Content/images/logo-white.png" alt="home" style="height:60px;" /><br />
        <img src="~/Content/images/logo-text-white.png" alt="home" style="height:30px;" />
    </a>

    <div class="btn-gorup dropdown" style="margin-top:20px;">
        <button data-toggle="dropdown" class="btn btn-block btn-outline btn-default dropdown-toggle waves-effect waves-light clearfix" type="button">
            <span class="pull-left" ng-bind-html="vm.currentText()"></span>
            <span class="btn-default btn-outline pull-right" style="padding-left:10px; border: none; border-left:1px solid; background:transparent !important;">
                <span class="caret"></span>
            </span>
        </button>
        <ul role="menu" class="dropdown-menu">
            <li ng-class="{active: vm.hasReferrerCode}">
                <a href ng-click="vm.setHasRefCode(true)"><i class="text-muted fa fa-thumbs-o-up" style="padding-right:10px;"></i> I have a Referrer Code</a>
            </li>
            <li ng-class="{active: !vm.hasReferrerCode}">
                <a href ng-click="vm.setHasRefCode(false)"><i class="text-muted fa fa-thumbs-o-down" style="padding-right:10px;"></i> I DONT have a Referrer Code</a>
            </li>
        </ul>
    </div>

    <div class="form-group" style="margin-top:20px;" ng-show="vm.hasReferrerCode">
        <div class="col-xs-12">
            <input class="form-control" type="text" required="" placeholder="Referrer Code" ng-model="vm.referrerCode">
        </div>
    </div>

    <div class="form-group" style="margin-top:20px;">
        <div class="col-xs-12">
            <input class="form-control" type="email" required="" placeholder="Email" ng-model="vm.email">
        </div>
    </div>
    <div class="form-group ">
        <div class="col-xs-12">
            <input class="form-control" type="password" required="" placeholder="Password" ng-model="vm.password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input class="form-control" type="password" required="" placeholder="Confirm Password" ng-model="vm.confirmPassword">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <Label>Password Strength: <small class="text-warning">{{vm.strengthMessage()}}</small></Label>
            <div class="progress">
                <div class="progress-bar progress-bar-danger" ng-class="vm.strengthClass()" ng-style="vm.strengthPercent()" role="progressbar"></div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div class="checkbox checkbox-primary p-t-0">
                <input id="checkbox-signup" type="checkbox" ng-model="vm.agreedToTerms">
                <label for="checkbox-signup"> I agree to all <a href ui-sref="termsAndConditions">Terms</a></label>
            </div>
        </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="button" ng-click="vm.signup()">
                <span ng-hide="vm.isSigningUp">Sign Up</span>
                <ring-loader size="24" color="white" show="vm.isSigningUp"></ring-loader>
            </button>
        </div>
    </div>
    <div class="form-group m-b-0">
        <div class="col-sm-12 text-center">
            <p>Already have an account? <a href ui-sref="signin" class="text-primary m-l-5"><b>Sign In</b></a></p>
        </div>
    </div>
</form>
