                               data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span style="white-space:nowrap; text-overflow:ellipsis; position:relative; width:85%; display: inline-block; overflow:hidden;"
                                      data-toggle="tooltip" data-original-title="{{vm.userNames()}}">{{vm.userNames()}}</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu animated flipInY">
                                <li><a href="/profile/index#!/home"><i class="ti-user"></i> My Profile</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href ng-click="vm.logout()"><i class="fa fa-power-off"></i> Logout</a></li>
                            </ul>
                        </div>
                    </div>

                    <ul class="nav in" id="side-menu">

                        <li>
                            <a ng-href="{{vm.getModuleUrl('dashboard')}}" ng-class="vm.getActiveClass('dashboard')" class="waves-effect">
                                <i class="icon-grid fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    Dashboard
                                </span>
                            </a>
                        </li>

                        <li class="nav-small-cap"></li>

                        <li>
