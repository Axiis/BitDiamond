
@{
    Layout = null;
}
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Dashboard</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<ul class="nav customtab nav-tabs" role="tablist"
    style="margin-bottom:20px;">
    <li role="presentation"  class="active">
        <a href role="tab">
            <span class="visible-xs">
                <i class="icon-grid" title="Home"></i>
            </span>
            <span class="hidden-xs">Dashboard</span>
        </a>
    </li>
    <li role="presentation">
        <a href role="tab"  ui-sref="base.home">
            <span class="visible-xs">
                <i class="icon-settings" title="Bitcoin Address"></i>
            </span>
            <span class="hidden-xs">Profile</span>
        </a>
    </li>
</ul>

<div class="row" style="margin-top:15px;">
    <div class="col-md-12 col-lg-3 col-sm-12 col-xs-12">
        <div class="white-box" style="height: 477px !important;">

            <h3 class="box-title" style="text-align:left;">
                Latest Posts
            </h3>

            <box-loader size="28" color="white" show="vm.isLoadingPosts" block-loader="true"></box-loader>

            <div class="message-center" ng-hide="vm.isLoadingPosts || vm.posts.length <= 0">
                <a ng-href="/posts/index#!/details/{{n.Id}}" ng-repeat="n in vm.posts" ng-class="{'b-none':vm.isLastPost($index)}">
                    <div class="user-img">
                        <i class="icon-pin" style="font-size:30px; color:white;"></i>
                    </div>
                    <div class="mail-contnet">
                        <h5 style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; height:1.2em;" ng-bind-html="n.Title">
                        </h5>
                        <span class="mail-desc" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; height:1.2em;"
                              ng-bind-html="n.Message"></span>
                        <span class="time">{{vm.displayTime(n.CreatedOn)}}</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-12 col-lg-9 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="white-box" style="height:231px;">
                    <h3 class="box-title">Total Incoming Payments</h3>
                    <ul class="list-inline two-part">
                        <li><i class="ti-arrow-down text-success"></i></li>
                        <li class="text-right">
                            <i class="fa fa-btc"></i> 
                            <span class="counter" ng-hide="vm.isLoadingIncomingTransactions">{{vm.totalIncomingTransactions || 0}}</span>
                            <box-loader size="28" color="white" show="vm.isLoadingIncomingTransactions"></box-loader>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="white-box" style="height:231px;">
                    <h3 class="box-title">Total Outgoing Payments</h3>
                    <ul class="list-inline two-part">
                        <li><i class="ti-arrow-up text-danger"></i></li>
                        <li class="text-right">
                            <i class="fa fa-btc"></i> 
                            <span class="counter" ng-hide="vm.isLoadingOutgoingTransactions">{{vm.totalOutgoingTransactions || 0}}</span>
                            <box-loader size="28" color="white" show="vm.isLoadingOutgoingTransactions"></box-loader>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="white-box" style="height: 173px;">
                    <h3 class="box-title">Bit Level</h3>
                    <ul class="list-inline two-part">
                        <li><i class="ti-stats-up text-info"></i></li>
                        <li class="text-right">
                            <span class="counter" ng-hide="vm.isLoadingBitLevel">{{vm.bitLevel.Cycle+'/'+vm.bitLevel.Level}}</span>
                            <box-loader size="24" color="white" show="vm.isLoadingBitLevel"></box-loader>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6 col-sm-6 col-xs-12" ng-hide="true">
                <div class="white-box">
                    <h3 class="box-title">NEW Projects</h3>
                    <ul class="list-inline two-part">
                        <li><i class="icon-folder text-purple"></i></li>
                        <li class="text-right"><span class="counter">169</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-sm-12 col-xs-12" ng-hide="true">
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">Open Projects</h3>
                    <ul class="list-inline two-part">
                        <li><i class="icon-folder-alt text-danger"></i></li>
                        <li class="text-right"><span class="counter">311</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <div class="white-box">
                    <h3 class="box-title">NEW Invoices</h3>
                    <ul class="list-inline two-part">
                        <li><i class="ti-wallet text-success"></i></li>
                        <li class="text-right"><span class="counter">117</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
