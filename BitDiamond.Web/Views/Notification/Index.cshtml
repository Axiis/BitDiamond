                                <span class="hide-menu">
                                    Bit Level
                                </span>
                            </a>
                        </li>

                        <li>
                            <a ng-href="{{vm.getModuleUrl('payments')}}" ng-class="vm.getActiveClass('payments')" class="waves-effect">
                                <i class="fa fa-btc fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    Payment History
                                </span>
                            </a>
                        </li>

                        <li>
                            <a ng-href="{{vm.getModuleUrl('family-tree')}}" ng-class="vm.getActiveClass('family-tree')" class="waves-effect">
                                <i class="icon-people fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    Family Tree
                                </span>
                            </a>
                        </li>

                        <li class="nav-small-cap"></li>

                        <li>
                            <a ng-href="{{vm.getModuleUrl('news')}}" ng-class="vm.getActiveClass('news')" class="waves-effect">
                                <i class="icon-book-open fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    News
                                </span>
                            </a>
                        </li>

                        <li>
                            <a ng-href="{{vm.getModuleUrl('notifications')}}" ng-class="vm.getActiveClass('notifications')" class="waves-effect">
                                <i class="icon-bell fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    Notifications
                                </span>
                            </a>
                        </li>

                        <li class="nav-small-cap"></li>

                        <li>
                            <a ng-href="{{vm.getModuleUrl('faq')}}" ng-class="vm.getActiveClass('faq')" class="waves-effect">
                                <i class="icon-question fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    FAQ
                                </span>
                            </a>
                        </li>

                        <li>
                            <a ng-href="{{vm.getModuleUrl('contact-us')}}" ng-class="vm.getActiveClass('contact-us')" class="waves-effect">
                                <i class="icon-call-out fa-fw" data-icon="v"></i>
                                <span class="hide-menu">
                                    Contact Us
                                </span>
                            </a>
                        </li>

                    </ul>
                </div><div class="slimScrollBar" style="background: rgb(220, 220, 220); width: 0px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 7px; z-index: 99; right: 1px; height: 5794px;"></div><div class="slimScrollRail" style="width: 0px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(51, 51, 51); opacity: 0.2; z-index: 90; right: 1px;"></div>
            </div>
        </div>
