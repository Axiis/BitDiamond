
@{
    Layout = null;
}


<form class="form-horizontal">
    <a href class="text-center db"><img src="/content/theme/eliteadmin/dark/../plugins/images/eliteadmin-logo.png" alt="Home"><br/>
    <img src="/content/theme/eliteadmin/dark/../plugins/images/eliteadmin-text.png" alt="Home" style="margin-bottom:20px;"></a>

    <div class="form-group ">
        <div class="col-xs-12">
            <h3>Recover Password</h3>
            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
        </div>
    </div>

    <div class="form-group ">
        <div class="col-xs-12">
            <input class="form-control" type="email" required="" placeholder="Email" ng-model="vm.email">
        </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-2">
            <button class="btn btn-default btn-lg btn-block btn-outline text-uppercase waves-effect waves-light" 
                    type="button"
                    ui-sref="signin">
                <i class="fa fa-arrow-left"></i>
            </button>
        </div>
        <div class="col-xs-10">
            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" 
                    type="button"
                    ng-click="vm.requestRecovery()">
                <span ng-hide="vm.isRecovering">Recover</span>
                <ring-loader size="24" color="white" show="vm.isRecovering"></ring-loader>
            </button>
        </div>
    </div>
</form>